<Window x:Class="QuizOstateczny.View.QuizSolving"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizOstateczny.View"
        xmlns:vm="clr-namespace:QuizOstateczny.ViewModel"
        mc:Ignorable="d"
        Title="QuizSolving" Height="450" Width="800">

    <Window.DataContext>
        <vm:QuizSolvingViewModel x:Name="quizSolvingViewModel"/>
    </Window.DataContext>
    
    

    <Grid>
        <ListBox ItemsSource="{Binding QuizList2}" Visibility="{Binding QuizListVisibility}" SelectedItem="{Binding SelectedQuiz2}" Margin="198,46,198,180">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Visibility="{Binding StartQuizVisibility}" Command="{Binding ZacznijQuiz}" Content="Start" HorizontalAlignment="Center" Margin="0,302,0,0" VerticalAlignment="Top" Height="87" Width="330"/>
        <Frame Name="MainFrame" Grid.RowSpan="2"/>

    </Grid>
</Window>
